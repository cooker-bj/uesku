<div class='float_left'>
<div id="messages_list" >
  <%=link_to '发送短信','#',:remote=>true,:class=>'new_message' %>
  <%=link_to '修改类别','#'%>
  <% user.my_friends.each do |friend|%>
      <div>  
        <%=check_box_tag 'friends[]',friend.id %>  
        <%=image_tag friend.avatar_url.to_s %> 
        <%=link_to friend.name,profile_user_path(friend) %>
      </div>
  <% end %>
</div>
<div>
  <% user.pending_friends.each do |friend|%>
      <div>    
        <%=image_tag friend.avatar_url.to_s %> 
        <%=link_to friend.name,profile_user_path(friend) %> 
        <%=link_to '同意',agree_friendship_path(friend),:remote=>true,:class=>'friends_option' %> 
        <%=link_to '拒绝',friendship_path(friend),method: :delete,data: {confirmation: '确定拒绝?'},:remote=>true,:class=>'friends_option'%>
      </div>
  <% end %>
</div>
<div>
	<% user.applied_friends.each do |friend| %>
	<div>
		 <%=image_tag friend.avatar_url.to_s %> 
     <%=link_to friend.name,profile_user_path(friend) %>
		 "未答复"
	</div>
	<%end %>
</div>
</div>
<div class="float_right">

  <div id='query_user'>查找用户<%=text_field_tag 'argm',nil,:placeholder=>'用户email或呢称'%><%=submit_tag '查询',:id=>'query_submit' %></div>
  <div id='query_result'></div>
  </div>