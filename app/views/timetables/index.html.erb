<h1><%=@lesson.title%>课表列表</h1>

<table>
  <tr>

    <th>名称</th>


    <th>开始日期</th>
    <th>结束日期</th>
    <th>创建人</th>
    <th>创建时间</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @timetables.each do |timetable| %>
  <tr>
    <td><%= timetable.title %></td>
    <td><%= timetable.start_day %></td>
    <td><%= timetable.end_day %></td>
    <td><%= timetable.creator.nickname %></td>
    <td><%= format_time(timetable.create_time) %></td>
    <td><%= link_to '显示', timetable_path(timetable) %></td>
    <td><%= link_to '修改', edit_timetable_path(timetable) if current_user ==timetable.creator %></td>
    <td><%= link_to '删除', timetable, method: :delete, data: { confirm: '你确定要删除吗?' } if current_user ==timetable.creator %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '新建课表', new_lesson_timetable_path(@lesson) %>
