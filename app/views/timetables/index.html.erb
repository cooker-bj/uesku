<h1>Listing timetables</h1>

<table>
  <tr>
    <th>Creator</th>
    <th>Title</th>
    <th>Description</th>
    <th>Lesson</th>
    <th>Start day</th>
    <th>End day</th>
    <th>Create time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @timetables.each do |timetable| %>
  <tr>
    <td><%= timetable.creator_id %></td>
    <td><%= timetable.title %></td>
    <td><%= timetable.description %></td>
    <td><%= timetable.lesson_id %></td>
    <td><%= timetable.start_day %></td>
    <td><%= timetable.end_day %></td>
    <td><%= timetable.create_time %></td>
    <td><%= link_to 'Show', timetable_path(timetable) %></td>
    <td><%= link_to 'Edit', edit_timetable_path(timetable) %></td>
    <td><%= link_to 'Destroy', timetable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

