 <ul class="comment_items_phone">
	
   <%=render 'comment_lists'%>
  </ul>
  <div id='reply_new' data-role='popup' >
	
    <%=form_for Reply.new,:remote=>true do |f| %>
	    <%=f.label :message,'回复：'%>
        <%=f.text_area :message,:cols=>32,:rows=>4 %>
		<%=f.hidden_field :comment_id%>
		<%=f.submit '确定'%>
     <% end %>
  </div>

  <div id="paginate_area"> <%=will_paginate @comments,:previous_label=>'前页',:next_label=>'下页' %>  </div>
