<p>
  <b>名称:</b>
  <%= @company.name %>
</p>

<p>
  <b>网址:</b>
  <%= @company.website %>
</p>

<p>
  <b>标签:</b>
  <%= @company.tags %>
</p>

<p>
  <b>公司简介:</b>
  <%= raw(@company.description) %>
</p>
<div>
  <b>地点</b> <br/>

  <% n=0 %>
  <%@company.branches.each do |branch| %>

      <fieldset>
        <div>
          <div>
            <p><b>名称</b><%=branch.name%></p>
            <p><b>电话</b><%=branch.phone%></p>
            <p><b>地址</b><%=branch.address %></p>
            <p><b>分支网址</b><%=branch.website%></p>
          </div>
           <%= tag "div",{:id=>"mymap#{n}", :class=>"course_map small_map",:data=>{:positionx=>branch.geolng,:positiony=>branch.geolat}},true  %>  <%=tag "/div","",true %>
         <div>
         <% branch.lessons.published.each do |lesson|%>
        <div>   课程名称：<%=lesson.title %> 总分：<%=lesson.rank %> <%=link_to '详细',lesson_path(lesson)%></div>

          <% end %>
         </div>
         </div>

        </fieldset>
      <% n+=1 %>
  <% end %>
  </div>




  <%= link_to '返回', companies_path %>