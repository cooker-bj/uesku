<h1>公司列表</h1>
 

<table>
  <tr>
    <th>名称</th>
    <th>网址</th>
    <th>标签</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= company.name %></td>
    <td><%= company.website %></td>
    <td><%= company.tags %></td>

    <td><%= link_to '显示', admin_company_path(company) %></td>
    <td><%= link_to '编辑', edit_admin_company_path(company) %></td>
    <td><%= link_to '删除', [:admin,company], method: :delete, data: { confirm: '确定删除吗' } %></td>
    <td><%= link_to '通过审核',set_audit_admin_company_path(company) %> </td>
  </tr>
<% end %>
</table>

<br />
<%=will_paginate @companies,:prev_label=>'前一页',:next_label=>'下一页'%>
