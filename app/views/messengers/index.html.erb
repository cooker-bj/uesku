<h1>Listing messengers</h1>

<table>
  <tr>
    <th>Sender</th>
    <th>Receiver</th>
    <th>Message</th>
    <th>Read status</th>
    <th>Create time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messengers.each do |messenger| %>
  <tr>
    <td><%= messenger.sender_id %></td>
    <td><%= messenger.receiver_id %></td>
    <td><%= messenger.message %></td>
    <td><%= messenger.read_status %></td>
    <td><%= messenger.create_time %></td>
    <td><%= link_to 'Show', messenger %></td>
    <td><%= link_to 'Edit', edit_messenger_path(messenger) %></td>
    <td><%= link_to 'Destroy', messenger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

