
<%= form_for(@place) do |f| %>
  <% if @place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@place.errors.count, "error") %> prohibited this place from being saved:</h2>

      <ul>
      <% @place.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title,'名称：' %><br />
    <%= f.text_field :title %>
  </div>
  <div class='field'>
    地址：<%=f.select :province_id,options_for_select(Location.roots.collect {|p| [p.name,p.id]}) %> 省
         <%=f.select :city_id,options_for_select(Location.first_cities.collect{|p| [p.name,p.id]})  %> 市
         <%=f.collection_select :district_id,Location.first_districts,:id,:name %> 区/县 
         <%=f.text_field :street %>
   </div>
   </div>
  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :phone,"电话" %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :description,"介绍" %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :recommendation,"推荐理由" %><br />
    <%= f.text_area :recommendation %>
  </div>
  <div class="field">
    <%= f.label :price,"价格" %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :opening_hours,"开放时间" %><br />
    <%= f.text_field :opening_hours %>
  </div>
  <div class="field">
   
    <%= f.hidden_field :positionx %>
    <%= f.hidden_field :positiony %>
  </div>
  <div class="field">
    <%= f.label :direction %><br />
    <%= f.text_field :direction %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
