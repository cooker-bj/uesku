<div class="class_time">


        <%=f.label :name,'名称'%>
        <%=f.text_field :name,:class=>'class_title'%>
        <%=f.label :start_day,'开始日期'%>
        <%=f.text_field :start_day,:class=>'date_picker start_day',:value=>(f.object.start_day.try(:strftime,"%Y-%m-%d")||Time.now.strftime("%Y-%m-%d")) %>
        <%=f.label :end_day,'结束日期'%>
        <%=f.text_field :end_day,:class=>'date_picker end_day',:value=>(f.object.end_day.try(:strftime,"%Y-%m-%d")||Time.now.strftime("%Y-%m-%d"))%>
        每周:<%=f.select :week,options_for_select(WEEK.map.with_index{|v,i|[v,i]},(f.object.week||Time.now.wday)) %>
        从<%=f.select :start_time_hour,hour_array %>:
        <%=f.select :start_time_minute,minute_array %>
        到　<%=f.select :end_time_hour,hour_array %>:<%=f.select :end_time_minute,minute_array %>
        <%=f.link_to_remove '删除'%>


</div>