<%=content_tag :div,id: mobile_page_id, data: {role: 'page',dialog: true} do %>
  <div data-role="header">
	 <h1>登录</h1>
	 <%=link_to '注册', new_registration_path(resource_name),class: "ui-btn-right"%>
 </div>

 
 <div data-role="content">
  <% unless flash[:alert].blank? %>
   <div id="error_explanation">
    <%=flash[:alert] %>
  </div>
  <% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),html: {:id=>'new_session',data:{ajax: false}}) do |f| %>
  <div data-role="fieldcontainer"><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></div>

  <div data-role="fieldcontainer"><%= f.label :password,'密码' %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div data-role="fieldcontainer"><%= f.check_box :remember_me %> <%= f.label :remember_me,'记住我' %></div>
  <% end -%>

  <div><%= f.submit "登录" %></div>
<% end %>

<%= render "users/shared/links" %>
</div>
<div class="list">
  <ul>
  <li><%=link_to image_tag("google_login.png"), '/users/auth/google_oauth2' %> </li>
  <li><%=link_to image_tag("QQ_login.png"),'/users/auth/qq_connect' %>  </li>
  <li><%=link_to image_tag("weibo_login.png",:width=>230),'/users/auth/weibo'  %> </li>
  </ul>
</div>
<% end %>