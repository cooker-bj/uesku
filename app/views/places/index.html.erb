<h1>Listing places</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Street</th>
    <th>Province</th>
    <th>City</th>
    <th>District</th>
    <th>Website</th>
    <th>Description</th>
    <th>Recommendation</th>
    <th>Price</th>
    <th>Opening hours</th>
    <th>Positionx</th>
    <th>Positiony</th>
    <th>Direction</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.title %></td>
    <td><%= place.street %></td>
    <td><%= place.province_id %></td>
    <td><%= place.city_id %></td>
    <td><%= place.district_id %></td>
    <td><%= place.website %></td>
    <td><%= place.description %></td>
    <td><%= place.recommendation %></td>
    <td><%= place.price %></td>
    <td><%= place.opening_hours %></td>
    <td><%= place.positionx %></td>
    <td><%= place.positiony %></td>
    <td><%= place.direction %></td>
    <td><%= place.phone %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

